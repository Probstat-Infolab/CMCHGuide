<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/layoutLabel"
        android:background="@drawable/label_rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewState"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/podokrom" />

        <TextView
            android:id="@+id/textViewDepartmentName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/label_lower_round"
        android:id="@+id/layoutDetails"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/tottho_seba_somuho"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDepartmentService"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="New Text" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/totthoDepartmentValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/tottho_obosthan"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDepartmentPosition"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="New Text" />

        </LinearLayout>


        <Button
            android:id="@+id/buttonDepartmentShowMap"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@xml/button_lower_round"
            android:text="@string/tottho_map_dekhan"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>